datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  password     String
  role         UserRole
  rooms        Room[]         @relation("OwnerRooms")
  reservations Reservation[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Room {
  id           Int            @id @default(autoincrement())
  name         String
  capacity     Int
  location     String
  pricePerHour Float
  pricePerDay  Float
  photo        String?

  ownerId Int
  owner   User          @relation("OwnerRooms", fields: [ownerId], references: [id])

  reservations Reservation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reservation {
  id        Int              @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  type      ReservationType
  totalPrice Float

  clientId Int
  roomId   Int

  client User @relation(fields: [clientId], references: [id])
  room   Room @relation(fields: [roomId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([roomId, startDate, endDate], name: "Reservation_roomId_startDate_endDate_idx")
}

enum UserRole {
  OWNER
  CLIENT
}

enum ReservationType {
  HOURLY
  DAILY
}
